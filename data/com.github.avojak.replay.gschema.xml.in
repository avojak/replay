<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="@schema-path@" id="@appid@">
    <key name="prefer-dark-style" type="b">
      <default>false</default>
      <summary>If the dark Gtk stylesheet should be used</summary>
      <description>If the dark Gtk stylesheet should be used</description>
    </key>
    <key name="pos-x" type="i">
      <default>360</default>
      <summary>The saved horizontal position of the window.</summary>
      <description>The saved horizontal position of the window.</description>
    </key>
    <key name="pos-y" type="i">
      <default>360</default>
      <summary>The saved vertical position width of the window.</summary>
      <description>The saved vertical position of the window.</description>
    </key>
    <key name="window-width" type="i">
      <default>1000</default>
      <summary>The saved width of the window.</summary>
      <description>The saved width of the window.</description>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
      <summary>The saved height of the window.</summary>
      <description>The saved height of the window.</description>
    </key>
    <key name="emu-pos-x" type="i">
      <default>360</default>
      <summary>The saved horizontal position of the emulator window.</summary>
      <description>The saved horizontal position of the emulator window.</description>
    </key>
    <key name="emu-pos-y" type="i">
      <default>360</default>
      <summary>The saved vertical position width of the emulator window.</summary>
      <description>The saved vertical position of the emulator window.</description>
    </key>
    <key name="emu-window-width" type="i">
      <default>500</default>
      <summary>The saved width of the emulator window.</summary>
      <description>The saved width of the emulator window.</description>
    </key>
    <key name="emu-window-height" type="i">
      <default>500</default>
      <summary>The saved height of the emulator window.</summary>
      <description>The saved height of the emulator window.</description>
    </key>
    <key name="emu-window-fullscreen" type="b">
      <default>false</default>
      <summary>Whether or not to open new emulator windows in fullscreen mode.</summary>
      <description>Whether or not to open new emulator windows in fullscreen mode.</description>
    </key>
    <key name="emu-boot-bios" type="b">
      <default>false</default>
      <summary>Whether or not to boot emulators with the BIOS.</summary>
      <description>Whether or not to boot emulators with the BIOS.</description>
    </key>
    <key name="emu-default-filter" type="s">
      <default>"SHARP"</default>
      <summary>The default emulator video filter.</summary>
      <description>The default emulator video filter.</description>
    </key>
    <key name="emu-default-speed" type="d">
      <default>1.0</default>
      <summary>The default emulator speed rate.</summary>
      <description>The default emulator speed rate.</description>
    </key>
    <!-- <key name="user-core-directory" type="s">
      <default>""</default>
      <summary>The directory where user-installed libretro cores are stored.</summary>
      <description>The directory where user-installed libretro cores are stored.</description>
    </key> -->
    <key name="user-rom-directory" type="s">
      <default>""</default>
      <summary>The directory where user-installed ROMs are stored.</summary>
      <description>The directory where user-installed ROMs are stored.</description>
    </key>
    <key name="user-save-directory" type="s">
      <default>""</default>
      <summary>The directory where ROM save data is stored.</summary>
      <description>The directory where ROM save data is stored.</description>
    </key>
    <key name="download-boxart" type="b">
      <default>true</default>
      <summary>Whether or not to automatically attempt to download box art for games in the library.</summary>
      <description>Whether or not to automatically attempt to download box art for games in the library.</description>
    </key>
    <key name="handle-window-focus-change" type="b">
      <default>true</default>
      <summary>Whether or not to automatically resume and pause a game when the window goes in and out of focus</summary>
      <description>Whether or not to automatically resume and pause a game when the window goes in and out of focus</description>
    </key>
  </schema>
</schemalist>
